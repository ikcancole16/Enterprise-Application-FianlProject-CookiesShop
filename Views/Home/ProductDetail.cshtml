<div class="container" style="margin-top:5%;">
    <h3>Product Specification</h3>
    <div class="panel panel-default">
        <div class="panel-heading">
            @x.ProductName
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col" style="color:blue">
                <a href="http://localhost:56829/ZoomImages/@x.Url" class="cloud-zoom" rel="adjustX: 10, adjustY:-4">
                    <img src="~/Content/images/@x.Url" width="400" height="400" />
                </a>

            </div>
            <div class="col">
                <h3><span id="mobilename" style="color:black"><b>Cake Name:</b></span></h3>

                <h6><span id="mobilename" style="color:black">@x.ProductName</span></h6>

                <h3><span id="mobilename" style="color:black"><b>Features:</b></span></h3>

                <h6><span id="mobilename" style="color:black">@x.Description</span></h6>

                <h3><span id="mobilename" style="color:black"><b>Color:</b></span></h3>
                <h4><span id="mobilename" style="color:black">@x.Color</span></h4>
                <h3><span id="mobilename" style="color:black"><b>Cream Type</b></span></h3>
                <h4><span id="mobilename" style="color:black">@x.CreanType</span></h4>
                <h3><span id="mobilename" style="color:black"><b>Cake Type:</b></span></h3>

                <h6><span id="mobilename" style="color:black">@x.CakeType</span></h6>

                <h3><span id="mobilename" style="color:black"><b>Price:</b></span></h3>

                <h6><span id="mobilename" style="color:black">$ @x.Price</span></h6>


            </div>

        </div>




    </div>

    <div>

        <a i href="javascript:void(0)" onclick="AddtoCart('@x.Id')" class="btn btn-info btn-lg" style="margin-left:60px">
            <span class="fa fa-shopping-cart"></span> Add To Cart
        </a>

        <a id="btn_add" href="@Url.Action("Index","Home" )" class="btn btn-info btn-lg" style="margin-left:60px">
            <span class="fa fa-sho"></span> Continue shopping
        </a>
        <br />
        <br />

    </div>
</div>
</div>



